@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>Role management &gt; @ViewBag.Title</h3>
<form asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger">
        <input hidden asp-for="RoleId"/>
    </div>
    <div class="row ">
        <div class="col-2">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Update</button>
            
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Delete
            </button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>
<!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal" id="deleteRoleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Role" asp-action="Delete" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Confirm Delete Role </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Are you sure want to remove this Role 
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a asp-controller="Role" asp-action="Delete" asp-route-id="@Model.RoleId">Yes</a>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                </div>
            </form>
            <!-- Modal Header -->
           

        </div>
    </div>
</div>